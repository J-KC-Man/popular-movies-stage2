<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jman.popularmovies">

    <!-- This permission is necessary in order for PopularMovies to perform network access. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- This permission is necessary in order for PopularMovies to check for network connection -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_detail"
            android:label="@string/movie_detail"></activity>
        <activity
            android:name=".FavouritesActivity"
            android:label="@string/favourites"></activity>

        <provider
            android:authorities="com.jman.popularmovies"
            android:name="com.jman.popularmovies.data.FavouriteMovieContentProvider"
            android:exported="false"/>
    </application>

</manifest>